{
  "appAlias": "~tests",
  "dependencyFlowchart": [
    ["pages", "layouts"],
    ["layouts", "containers"],
    ["containers", "contexts", { "label": "Only Provider" }],
    ["containers", "components"],
    ["components", "hooks"],
    ["hooks", "contexts", { "label": "Only Context", "selfOnly": true }],
    ["contexts", "services"],
    ["components", "icons"],
    ["icons", "styles"],
    ["styles", "utils"],
    ["services", "utils"]
  ],
  "docs": {
    "file": "tests/docs.md",
    "markerTag": "OVERRIDE_TEST",
    "content": "This is a test documentation content."
  },
  "lintFiles": ["src/{folder}/**/*.(ts|tsx)"],
  "overrideRules": {},
  "packageImportRules": [
    {
      "name": "react",
      "importNames": ["createContext"],
      "allowedInFolders": ["contexts"]
    },
    {
      "name": "react",
      "importNames": ["useContext"],
      "allowedInFolders": ["hooks"]
    },
    {
      "name": "axios",
      "allowedInFolders": ["services"]
    }
  ]
}
