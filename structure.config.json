{
  "appAlias": "~tests",
  "dependencyFlow": [
    ["pages", "layouts"],
    ["layouts", "containers"],
    ["containers", "contexts", { "description": "Only Provider" }],
    ["containers", "components"],
    ["components", "hooks"],
    ["hooks", "contexts", { "description": "Only Context", "selfOnly": true }],
    ["contexts", "services"],
    ["components", "icons"],
    ["icons", "styles"],
    ["styles", "utils"],
    ["services", "utils"]
  ],
  "docs": {
    "file": "tests/docs.md",
    "markerTag": "DEPENDENCY_RULE"
  },
  "lintFiles": ["src/{folder}/**/*.(ts|tsx)"],
  "overrideRules": {
    "contexts": { "react-refresh/only-export-components": "off" }
  },
  "packageImportRules": [
    {
      "name": "react",
      "importNames": ["createContext"],
      "allowedInFolders": ["contexts"]
    },
    {
      "name": "react",
      "importNames": ["useContext"],
      "allowedInFolders": ["hooks"]
    },
    {
      "name": "axios",
      "allowedInFolders": ["services"]
    }
  ]
}
